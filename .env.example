# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=

# Discord Application (Client) ID
CLIENT_ID=

# Guild (Server) ID for guild-scoped command registration
GUILD_ID=

# Channel ID where the bot operates (right-click channel -> Copy Channel ID)
PAYOUT_CHANNEL_ID=

# Role IDs for positions 1-12 (create these roles in Discord, then right-click -> Copy Role ID)
# IMPORTANT: The bot's role must be ABOVE all Position roles in the server role hierarchy
ROLE_POSITION_1=
ROLE_POSITION_2=
ROLE_POSITION_3=
ROLE_POSITION_4=
ROLE_POSITION_5=
ROLE_POSITION_6=
ROLE_POSITION_7=
ROLE_POSITION_8=
ROLE_POSITION_9=
ROLE_POSITION_10=
ROLE_POSITION_11=
ROLE_POSITION_12=

# Path to SQLite database file (relative to project root)
DATABASE_PATH=./data/payouts.db

# Daily ranking recalculation time (cron expression, default midnight UTC)
RANKING_CRON=0 0 * * *

# Daily database backup time (cron expression, default 01:00 UTC)
BACKUP_CRON=0 1 * * *

# Number of days to keep backups (0 = keep all)
BACKUP_RETENTION_DAYS=0

# Timeout chance by rank diff (piecewise linear anchors, % success chance)
# When timing out someone above you: diff 1=25%, 3=10%, 5=5%, 10=1%, 12=0.1%
TIMEOUT_CHANCE_DIFF_1=25
TIMEOUT_CHANCE_DIFF_3=10
TIMEOUT_CHANCE_DIFF_5=5
TIMEOUT_CHANCE_DIFF_10=1
TIMEOUT_CHANCE_DIFF_12=0.1
# Effective rank for unranked users (below rank 12)
TIMEOUT_UNRANKED_RANK=13

# Escalating backfire when spamming timeout on cooldown (% per attempt, first attempt = 0%)
TIMEOUT_BACKFIRE_INCREMENT=10
# Max backfire chance when spamming
TIMEOUT_BACKFIRE_CAP=80