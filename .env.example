# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=

# Discord Application (Client) ID
CLIENT_ID=

# Guild (Server) ID for guild-scoped command registration
GUILD_ID=

# Channel ID where the bot operates (right-click channel -> Copy Channel ID)
PAYOUT_CHANNEL_ID=

# Role IDs for positions 1-10 (create these roles in Discord, then right-click -> Copy Role ID)
# IMPORTANT: The bot's role must be ABOVE all Position roles in the server role hierarchy
ROLE_POSITION_1=
ROLE_POSITION_2=
ROLE_POSITION_3=
ROLE_POSITION_4=
ROLE_POSITION_5=
ROLE_POSITION_6=
ROLE_POSITION_7=
ROLE_POSITION_8=
ROLE_POSITION_9=
ROLE_POSITION_10=

# Path to SQLite database file (relative to project root)
DATABASE_PATH=./data/payouts.db

# Daily ranking recalculation time (cron expression, default midnight UTC)
RANKING_CRON=0 0 * * *

# Daily database backup time (cron expression, default 01:00 UTC)
BACKUP_CRON=0 1 * * *

# Number of days to keep backups (0 = keep all)
BACKUP_RETENTION_DAYS=0
